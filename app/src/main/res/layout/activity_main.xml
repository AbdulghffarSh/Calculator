<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white">

    <Button
        android:id="@+id/twoButton"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/oneButton"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="120dp"
        android:background="#FFFFFF"
        android:backgroundTint="#AFAFAF"
        android:text="2"
        android:textSize="60dp" />

    <Button
        android:id="@+id/oneButton"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="120dp"
        android:background="#FFFFFF"
        android:backgroundTint="#AFAFAF"
        android:text="1"
        android:textSize="60dp" />

    <Button
        android:id="@+id/comma"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/zeroButton"
        android:layout_marginLeft="8dp"
        android:background="#FFFFFF"
        android:backgroundTint="#AFAFAF"
        android:text="."
        android:textSize="60dp" />

    <Button
        android:id="@+id/zeroButton"
        android:layout_width="188dp"
        android:layout_height="90dp"
        android:layout_marginStart="6dp"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        android:backgroundTint="#AFAFAF"
        android:text="0"
        android:textSize="60dp"
        />

    <Button
        android:id="@+id/threeButton"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="8dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/twoButton"
        android:layout_marginBottom="120dp"
        android:background="#FFFFFF"
        android:backgroundTint="#AFAFAF"
        android:text="3"
        android:textSize="60dp" />

    <Button
        android:id="@+id/sevenButton"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="7dp"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/fourButton"
        android:background="#FFFFFF"
        android:backgroundTint="#AFAFAF"
        android:text="9"
        android:textSize="60dp" />

    <Button
        android:id="@+id/eightButton"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_toEndOf="@+id/sevenButton"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/fiveButton"
        android:background="#FFFFFF"
        android:backgroundTint="#AFAFAF"
        android:text="8"
        android:textSize="60dp" />

    <Button
        android:id="@+idnineButton"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_toEndOf="@+id/fiveButton"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/sixButton"
        android:background="#FFFFFF"
        android:backgroundTint="#AFAFAF"
        android:text="7"
        android:textSize="60dp" />

    <Button
        android:id="@+id/fourButton"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="7dp"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/oneButton"
        android:background="#FFFFFF"
        android:backgroundTint="#AFAFAF"
        android:text="4"
        android:textSize="60dp" />

    <Button
        android:id="@+id/fiveButton"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_toEndOf="@+id/fourButton"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/twoButton"
        android:background="#FFFFFF"
        android:backgroundTint="#AFAFAF"
        android:text="5"
        android:textSize="60dp" />

    <Button
        android:id="@+id/sixButton"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_toEndOf="@+id/fiveButton"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/threeButton"
        android:background="#FFFFFF"
        android:backgroundTint="#AFAFAF"
        android:text="6"
        android:textSize="60dp" />
    //Symbols


    <Button
        android:id="@+id/plus"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_toRightOf="@+id/sixButton"
        android:layout_above="@+id/multiple"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:background="#FFFFFF"
        android:backgroundTint="#A4FF5722"
        android:text="+"
        android:textSize="60dp" />

    <Button
        android:id="@+id/equal"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_toRightOf="@+id/comma"
        android:layout_marginLeft="20dp"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        android:backgroundTint="#A4FF5722"
        android:text="="
        android:textSize="60dp" />

    <Button
        android:id="@+id/minus"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_toRightOf="@+id/threeButton"
        android:layout_above="@+id/equal"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="20dp"
        android:background="#FFFFFF"
        android:backgroundTint="#A4FF5722"
        android:text="-"
        android:textSize="60dp" />

    <Button
        android:id="@+id/multiple"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_toRightOf="@+id/sixButton"
        android:layout_above="@+id/minus"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:background="#FFFFFF"
        android:backgroundTint="#A4FF5722"
        android:text="ร"
        android:textSize="60dp" />

    <Button
        android:id="@+id/division"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@+id/plus"
        android:layout_toRightOf="@+id/remainder"
        android:layout_marginLeft="20dp"
        android:background="#FFFFFF"
        android:backgroundTint="#A4FF5722"
        android:text="รท"
        android:textSize="60dp" />

    <Button
        android:id="@+id/remainder"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@+id/sevenButton"
        android:layout_toRightOf="@+id/C"
        android:layout_marginLeft="8dp"
        android:background="#FFFFFF"
        android:backgroundTint="#A4FF5722"
        android:text="%"
        android:textSize="60dp" />

    <Button
        android:id="@+id/C"
        android:layout_width="188dp"
        android:layout_height="90dp"
        android:layout_above="@+id/sevenButton"
        android:layout_marginStart="6dp"
        
        android:background="#FFFFFF"
        android:backgroundTint="#A4FF5722"
        android:text="C"
        android:textSize="60dp" />

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="98dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="78dp"
        android:layout_marginEnd="0dp"
        android:fontFamily="@font/digital_font"
        android:textColor="@color/black"
        android:textSize="60dp"
        />

    <TextView
        android:id="@+id/headerLogo"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:ems="10"
        android:fontFamily="@font/digital_font"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="EasyCal"
        android:textColor="#A4FF5722"
        android:textSize="60dp" />


</RelativeLayout>